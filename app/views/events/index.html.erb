<div class="container">
  <div class="row">
    <div class="col-lg-3">

      <div class="panel panel-default">
        <div class="panel-heading"><strong class="center">Pages</strong></div>
        <div class="panel-body">
          <%= form_tag root_path, method: :get do %>
            <ul class="pages">
              <% @pages.each do |page| %>
                <li>
                  <label id="page-<%= page.id%>-checkbox" class="checkbox">
                    <%= check_box_tag 'page_ids[]', page.id, checked?(page.id) %>
                    <%= page.name %>
                  </label>
                </li>
              <% end %>
            </ul>

            <%= submit_tag 'envoyer', class: 'hide' %>
          <% end %>
        </div>
      </div>

    </div>

    <div class="col-lg-9">
      <h1 class="page-header">Calendrier Ã‰tudiant</h1>
      <%= month_calendar(events: @events, attribute: :started_at, attribute_end: :ended_at) do |date, events| %>
        <strong><%= date.day %></strong>

        <% events.each do |event| %>
          <div class="event">
            <small><a href="https://facebook.com/events/<%= event.facebook_id %>"><%= event.title %></a></small>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
