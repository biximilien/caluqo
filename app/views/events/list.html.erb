<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'shared/pages' %>
    </div>

    <div class="col-lg-9">
      <h1 class="page-header">Évènements</h1>
      <ul id="events-list">
        <% @events.each do |event| %>
          <li class="event-list-item">
            <%= link_to "https://facebook.com/events/#{event.facebook_id}" do %>
              <%= render event %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
