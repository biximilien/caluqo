<div class="container">
  <div class="row">
    <div class="col-lg-3">

      <div id="pages-panel" class="panel panel-default">
        <div class="panel-heading"><strong class="center">Pages</strong></div>
        <div class="panel-body">
          <%= form_tag root_path, method: :get do %>
            <ul class="pages">
              <% @pages.each do |page| %>
                <li>
                  <label id="page-<%= page.id%>-checkbox" class="checkbox">
                    <%= check_box_tag 'page_ids[]', page.id, checked?(page.id) %>
                    <%= page.name %>
                  </label>
                </li>
              <% end %>
            </ul>

            <%= submit_tag 'envoyer', class: 'hide' %>
          <% end %>
        </div>
      </div>

    </div>

    <div class="col-lg-9">
      <h1 class="page-header">Évènements</h1>
      <ul id="events-list">
        <% @events.each do |event| %>
          <li class="event-list-item">
            <%= link_to "https://facebook.com/events/#{event.facebook_id}" do %>
              <%= render event %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
