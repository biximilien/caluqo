<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'shared/pages' %>
    </div>

    <div class="col-lg-9">
      <%= month_calendar(events: @events, attribute: :started_at, attribute_end: :ended_at) do |date, events| %>
        <strong><%= date.day %></strong>

        <% events.each do |event| %>
          <div class="event">
            <small><a href="https://facebook.com/events/<%= event.facebook_id %>" target="_parent"><%= event.title %></a></small>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
